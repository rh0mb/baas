<div class="breadcrumbs margin-bottom-30">
  <div class="container">
    <h1 class="color-green pull-left">Cotizador</h1>
  </div><!--/container-->
</div><!--/breadcrumbs-->
<!--=== End Breadcrumbs ===-->



<div class="container">   
  <div class="row-fluid">
    <div class="span6">

      <div class="row-fluid">
        <h4>Aqui va la descripcion</h4>
      </div>
      <form id="ecot" action="#">
        <div class="row-fluid">
          <div class="span6">
            <label>Base</label>
            <input type="text" name="b" placeholder="en metros">
          </div>
          <div class="span6">
            <label>Altura</label>
            <input type="text" name="h" placeholder="en metros">
          </div>
        </div>
        <input type="text" name="d" placeholder="en metros" class="hideme" value=<%= banamex_parser %>>
        <div class="row-fluid">
          <div class="span6">
            <input type="button" class="btn-u" value="Calcular" onclick="cotizar();" />
          </div>
        </div><br>
        <div class="row-fluid">
          <div class="span6">
            <label>Area (m2)</label>
            <input type="text" name="a" readonly="readonly">
          </div>
        </div>
        <div class="row-fluid">
          <div class="span6">
            <label>Precio Total (MXN)</label>
            <input type="text" name="priceMxn" readonly="readonly">
          </div>
          <div class="span6">
            <label>Precio por metro (MXN)</label>
            <input type="text" name="priceMMxn" readonly="readonly">
          </div>
        </div>
        <div class="row-fluid">
          <div class="span6">
            <label>Precio Total (MXN) con IVA</label>
            <input type="text" name="priceMxnIva" readonly="readonly">
          </div>
          <div class="span6">
            <label>Precio por Metro (MXN) con IVA</label>
            <input type="text" name="priceMMxnIva" readonly="readonly">
          </div>
        </div>
        <div class="row-fluid">
          <div class="span6">
            <label>Precio Total (USD)</label>
            <input type="text" name="priceUsd" readonly="readonly">
          </div>
          <div class="span6">
            <label>Precio por Metro (USD)</label>
            <input type="text" name="priceMUsd" readonly="readonly"> <br>
          </div>
        </div>
        <div id="box"></div>
        <div id="box2"></div>
        <div id="box3"></div>
      </form>
    </div><!--/span6-->


    <div class="span6 hideme" id="invoicer">
      <div class="row-fluid">
        <h4>Solicitar cotizaci√≥n formal</h4>
      </div>
        <%= form_tag invoicer_email_path, method: :post do %>
        <label><%= label_tag "user_info[name]", "Nombre:", :input_html => {:style => 'width: 100%'} %></label>
        <%= text_field_tag("user_info[name]", value = nil, options = {:class => "span7"}) %>

        <label><%= label_tag "user_info[email]", "Correo:" %></label>
        <%= text_field_tag("user_info[email]", value = nil, options = {:class => "span7"}) %>

        <label><%= label_tag "user_info[message]", "Mensaje:" %></label>
        <%= text_area_tag("user_info[message]", value = nil, options = {:rows => 8, :class => "span10"}) %>

        <%= hidden_field_tag("user_info[base]", value = nil, options = {:id => "base"}) %>
        <%= hidden_field_tag("user_info[height]", value = nil, options = {:id => "height"}) %>
        <%= hidden_field_tag("user_info[area]", value = nil, options = {:id => "area"}) %>
        <%= hidden_field_tag("user_info[priceMxn]", value = nil, options = {:id => "priceMxn"}) %>

        <%= hidden_field "user_info[nickname]", "Seudonimo:" %>
        <%= hidden_field_tag "user_info[nickname]"  %><br />
        
        <p><%= submit_tag "Enviar", class: "btn-u"%></p>
        <% end %>
     
    </div><!--/span9-->

    </div>

  </div>
</div>



<script type="text/javascript" src="cotizador.js">
var i = #{banamex_parser};

</script>